<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ThemeActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/card_green"
        style="@style/theme_cardview_style"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp">

        <TextView
            style="@style/theme_text_style"
            android:background="@color/skin_default"
            android:text="天然绿"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_blue"
        style="@style/theme_cardview_style"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp">

        <TextView
            style="@style/theme_text_style"
            android:background="@color/skin_blue"
            android:text="宁静蓝"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_yellow"
        style="@style/theme_cardview_style"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp">

        <TextView
            style="@style/theme_text_style"
            android:background="@color/skin_yellow"
            android:text="活力黄"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_pick"
        style="@style/theme_cardview_style"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp">

        <TextView
            style="@style/theme_text_style"
            android:background="@color/skin_pick"
            android:text="温暖粉"/>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_purple"
        style="@style/theme_cardview_style"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp">

        <TextView
            style="@style/theme_text_style"
            android:background="@color/skin_purple"
            android:text="神秘紫"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_red"
        style="@style/theme_cardview_style"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp">

        <TextView
            style="@style/theme_text_style"
            android:text="热情红"/>
    </android.support.v7.widget.CardView>
</LinearLayout>
